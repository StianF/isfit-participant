<p id="notice"><%= notice %></p>

<p>
  <b>Subject:</b>
  <%= @question.subject %>
</p>

<p>
  <b>Content:</b>
  <%= @question.content %>
</p>
<%= link_to 'Edit', edit_question_path(@question) %> |
<%= link_to 'Back', questions_path %>
<p>
 <% if user_signed_in? %>
 <b>Add answer:</b><br />
    <%= form_for([@question, @question.answers.build]) do |f| %>
    <div class="field">
      <%= f.label :content %><br />
      <%= f.text_area :content %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
  <% end %>
  <br />
  <b>Answers:</b>
  <% @answers.each do |answer|%> 
    <p><%=answer.content%>
  <%end%>
  <%end%>
</p>
